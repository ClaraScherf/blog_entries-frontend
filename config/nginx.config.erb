worker_processes 1;
daemon off;

events {
  worker_connections 1024;
}

http {
  gzip on;
  gzip_min_length 0;
  gzip_proxied any;
  gzip_types text/plain text/xml text/css application/x-javascript;

  server {
    listen <%= ENV["PORT"] %>;
    server_name _;
    keepalive_timeout 5;
    root /app/dist;
    location / {
      try_files $uri $uri/ /index.html;
    }
    error_page 500 502 503 504 /500.html;
  }
}
